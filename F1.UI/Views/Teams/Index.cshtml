@using F1.UI.Models.DTOs
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@model IEnumerable<TeamDto>

@{
    <h3 class="mt-3">Teams</h3>

    <div class="d-flex justify-content-end m-3">
        <a class="btn btn-dark" asp-controller="Teams" asp-action="Add">Add Team</a>
    </div> 

    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Id</th>
            <th>Team</th>
        </tr>
        </thead>
        <tbody>
            @foreach(var team in Model)
            {
                <tr>
                <td>@team.Id</td>
                <td>@team.Name</td>
                <td>
                    <a class="btn btn-light" asp-controller="Teams" asp-action="Edit" asp-route-id="@team.Id">Edit</a>
                </td>
                </tr>
            }
        </tbody>
    </table>
}
